<h1>Listing stories</h1>
<% form_tag stories_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% @stories.each do |story| %>
  <div>
    <h3><%= story.title %></h3>
    <p><%= story.body %></p>

  </div>
<% end %>
</table>

